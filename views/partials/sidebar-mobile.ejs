<%
// same role detection as desktop
let role = (typeof userRole !== 'undefined' && userRole) ? String(userRole).toLowerCase()
         : (typeof user !== 'undefined' && user.role) ? String(user.role).toLowerCase()
         : (typeof user !== 'undefined' && user.role_id) ? (user.role_id === 4 ? 'admin' : user.role_id === 2 ? 'officer' : 'citizen')
         : 'citizen';
%>

<!-- overlay -->
<div
  id="sidebar-overlay"
  class="fixed inset-0 bg-black bg-opacity-50 hidden z-40 lg:hidden"
></div>

<% if (role === 'admin' || role === '4') { %>
<aside
  id="sidebar-mobile"
  class="fixed inset-y-0 left-0 w-64 bg-emerald-800 p-6 transform -translate-x-full transition-transform duration-300 ease-in-out z-50 lg:hidden"
>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-white">Admin Panel</h2>
    <button onclick="closeSidebarMobile()" class="text-white text-xl">✕</button>
  </div>
  <nav class="space-y-2">
    <a
      href="/admin/dashboard"
      class="block py-2 px-4 rounded bg-emerald-100 text-emerald-700 font-medium"
      >Dashboard</a
    >
    <a
      href="/admin/users"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-700"
      >Manage Users</a
    >
    <a
      href="/admin/services"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-700"
      >Manage Services</a
    >
    <a
      href="/admin/reports"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-700"
      >Reports</a
    >
    <a href="/logout" class="block py-2 px-4 rounded text-red-600">Logout</a>
  </nav>
</aside>

<% } else if (role === 'officer' || role === '2') { %>
<aside
  id="sidebar-mobile"
  class="fixed inset-y-0 left-0 w-64 bg-emerald-800 p-6 transform -translate-x-full transition-transform duration-300 ease-in-out z-50 lg:hidden"
>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-bold text-white">Officer Panel</h2>
    <button onclick="closeSidebarMobile()" class="text-white text-xl">✕</button>
  </div>
  <nav class="space-y-2">
    <a
      href="/officer/dashboard"
      class="block py-2 px-4 rounded bg-emerald-100 text-emerald-800 font-medium"
      >My Queue</a
    >
    <a
      href="/officer/reports"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-800"
      >Reports</a
    >
    <a href="/logout" class="block py-2 px-4 rounded text-red-600">Logout</a>
  </nav>
</aside>

<% } else { %>
<aside
  id="sidebar-mobile"
  class="fixed inset-y-0 left-0 w-64 bg-emerald-800 p-6 transform -translate-x-full transition-transform duration-300 ease-in-out z-50 lg:hidden"
>
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg font-semibold text-white">Dashboard</h2>
    <button onclick="closeSidebarMobile()" class="text-white text-xl">✕</button>
  </div>
  <nav class="space-y-2">
    <a
      href="/citizen/dashboard"
      class="block py-2 px-4 rounded bg-emerald-100 text-emerald-600 font-medium"
      >Overview</a
    >
    <a
      href="/citizen/requests"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-600"
      >My Requests</a
    >
    <a
      href="/citizen/apply-service"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-600"
      >Apply New Service</a
    >
    <a
      href="/profile"
      class="block py-2 px-4 rounded text-white hover:bg-emerald-100 hover:text-emerald-600"
      >Profile Settings</a
    >
    <a href="/logout" class="block py-2 px-4 rounded text-red-600">Logout</a>
  </nav>
</aside>
<% } %>

<script>
  // functions to open/close sidebar mobile — header's menu-btn should toggle by calling openSidebarMobile()
  function openSidebarMobile() {
    const sb = document.getElementById('sidebar-mobile')
    const ov = document.getElementById('sidebar-overlay')
    if (sb) sb.classList.remove('-translate-x-full')
    if (ov) ov.classList.remove('hidden')
  }
  function closeSidebarMobile() {
    const sb = document.getElementById('sidebar-mobile')
    const ov = document.getElementById('sidebar-overlay')
    if (sb) sb.classList.add('-translate-x-full')
    if (ov) ov.classList.add('hidden')
  }

  // attach to menu button if present (header may already have an event)
  const menuBtn = document.getElementById('menu-btn')
  if (menuBtn) {
    menuBtn.addEventListener('click', (e) => {
      // if sidebar currently closed => open
      const sb = document.getElementById('sidebar-mobile')
      const ov = document.getElementById('sidebar-overlay')
      if (!sb) return
      if (sb.classList.contains('-translate-x-full')) {
        openSidebarMobile()
      } else {
        closeSidebarMobile()
      }
    })
  }

  // close when overlay clicked
  const overlay = document.getElementById('sidebar-overlay')
  if (overlay) overlay.addEventListener('click', closeSidebarMobile)
</script>
