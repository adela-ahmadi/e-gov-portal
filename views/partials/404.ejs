<!-- views/partials/404.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %> - E-Gov Portal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.1/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50 flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-6xl font-bold text-gray-400">404</h1>
      <h2 class="text-2xl font-semibold text-gray-700 mt-4">Page Not Found</h2>
      <p class="text-gray-500 mt-2">
        Sorry, the page you're looking for doesn't exist.
      </p>
      <a
        href="/"
        class="mt-6 inline-block bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700"
      >
        Go Home
      </a>
    </div>
  </body>
</html>
