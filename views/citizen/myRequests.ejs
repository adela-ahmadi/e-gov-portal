<!-- views/citizen/myRequests.ejs -->
 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>My Requests - E-Gov-Portal</title>
 </head>
 <!-- prettier-ignore -->

 <body>
    <%- include('../partials/header.ejs') %>
    <div class="flex flex-col lg:flex-row min-h-screen">
       <%- include('../partials/sidebar-desktop.ejs', { userRole: user.role }) %>
      <main class="p-6 sm:p-8">
      <div class="max-w-7xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">My Requests</h1>

    <div class="bg-gray-100 rounded-lg shadow overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-emerald-50">
          <tr>
            <th class="px-6 py-3  text-xs font-medium text-gray-500 uppercase tracking-wider">Request ID</th>
            <th class="px-6 py-3  text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
            <th class="px-6 py-3  text-xs font-medium text-gray-500 uppercase tracking-wider">Submitted</th>
            <th class="px-6 py-3  text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3  text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% (requests || []).forEach(req => { %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm"><%= req.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm"><%= req.service_name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm"><%= req.submitted_at %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                  <%= req.status === 'Approved' ? 'bg-green-100 text-green-800' :
                     req.status === 'Rejected' ? 'bg-red-100 text-red-800' :
                     req.status === 'More Info Required' ? 'bg-yellow-100 text-yellow-800' :
                     'bg-blue-100 text-blue-800' %>">
                  <%= req.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                <a href="/citizen/request/<%= req.id %>" class="text-emerald-600 hover:text-emerald-900">View</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</main>
<!-- Mobile Sidebar -->
    <%- include('../partials/sidebar-mobile.ejs') %>

    <!-- Sidebar Mobile Script -->
     <script src="/js/sidebar.js"></script>
 </body>
 </html>
