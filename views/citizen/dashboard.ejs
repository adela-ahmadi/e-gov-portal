<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Citizen Dashboard - E-Gov Portal</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- فونت Inter -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- آیکون‌ها -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-50 text-gray-900 min-h-screen">
    <!-- Header -->
    <%- include('../partials/header.ejs') %>

    <div class="flex">
      <%- include('../partials/sidebar-desktop.ejs', { userRole: user.role }) %>
      <!-- Main Content -->
      <main class="flex-1 p-6 sm:p-8">
        <!-- Greeting -->
        <div class="mb-8">
          <h1 class="text-3xl text-emerald-600 font-bold">
            Welcome back, <%= user.name %>
          </h1>
          <p class="text-gray-600">
            Here’s your request status and next steps.
          </p>
        </div>

        <!-- Summary Cards - Responsive Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div
            class="bg-emerald-100 p-6 rounded-lg border border-gray-100 text-center md:text-left shadow hover:shadow-lg"
          >
            <h3 class="text-sm font-medium text-gray-900">Active Requests</h3>
            <p class="text-2xl font-bold text-gray-900 mt-1">3</p>
            <div
              class="mt-3 flex justify-center md:justify-start items-center text-sm text-blue-800 cursor-pointer"
            >
              <span>View all</span>
              <i class="fas fa-arrow-right ml-1 text-xs"></i>
            </div>
          </div>
          <div
            class="bg-emerald-200 p-6 rounded-lg shadow border border-gray-100 text-center md:text-left hover:shadow-lg"
          >
            <h3 class="text-sm font-medium text-gray-900">Pending Payments</h3>
            <p class="text-2xl font-bold text-yellow-600 mt-1">AFN 2,700</p>
            <div
              class="mt-3 flex justify-center md:justify-start items-center text-sm text-blue-800 cursor-pointer"
            >
              <span>Pay now</span>
              <i class="fas fa-arrow-right ml-1 text-xs"></i>
            </div>
          </div>
          <div
            class="bg-emerald-300 p-6 rounded-lg shadow border border-gray-100 text-center md:text-left hover:shadow-lg"
          >
            <h3 class="text-sm font-medium text-gray-900">Notifications</h3>
            <p class="text-2xl font-bold text-red-600 mt-1">2</p>
            <div
              class="mt-3 flex justify-center md:justify-start items-center text-sm text-blue-800 cursor-pointer"
            >
              <span>See details</span>
              <i class="fas fa-arrow-right ml-1 text-xs"></i>
            </div>
          </div>
        </div>

        <!-- Recent Notifications -->
        <div
          class="bg-gray-200 p-6 rounded-lg shadow border border-gray-100 mb-8"
        >
          <h2 class="text-lg font-semibold mb-4">Recent Notifications</h2>
          <ul class="space-y-3">
            <% if (notifications && notifications.length > 0) { %> <%
            notifications.forEach(note => { %>
            <li class="flex items-start space-x-3 space-x-reverse">
              <i class="fas fa-info-circle text-blue-500 mt-1"></i>
              <div>
                <p class="text-sm"><%= note.message %></p>
                <span class="text-xs text-gray-500">
                  <%= new Date(note.created_at).toLocaleString('fa-IR', {
                  hour12: false }) %>
                </span>
              </div>
            </li>
            <% }) %>
            <% } else { %>
            <li class="text-sm text-gray-500">No new notifications.</li>
            <% } %>
          </ul>
        </div>

        <!-- My Requests Table + Responsive List -->
        <div
          class="bg-white rounded-lg shadow overflow-hidden border border-gray-100"
        >
          <div
            class="p-6 border-b border-gray-200 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4"
          >
            <h2 class="text-lg font-semibold">My Requests</h2>
            <a
              href="/citizen/apply-service"
              class="bg-emerald-700 text-white px-4 py-2 rounded text-sm hover:bg-emerald-600 transition whitespace-nowrap"
            >
              <i class="fas fa-plus mr-1"></i> New Request
            </a>
          </div>

          <!-- Desktop Table -->
          <div class="hidden sm:block overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-emerald-50">
                <tr>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    Request ID
                  </th>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    Service
                  </th>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    Submitted
                  </th>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    Status
                  </th>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    ETA
                  </th>
                  <th
                    class="px-6 py-3 text-xs font-medium text-gray-700 uppercase tracking-wider"
                  >
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% if (requests && requests.length > 0) { %> <%
                requests.forEach(req => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= req.id %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <%= req.service_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <%= req.submitted_at %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span
                      class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full status-<%= req.status.toLowerCase().replace(' ', '-') %>"
                    >
                      <%= req.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= req.eta_days %> days
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <a
                      href="/citizen/request/<%= req.id %>"
                      class="text-blue-600 hover:text-blue-900 mr-4"
                      >View</a
                    >
                    <% if (req.status === 'More Info Required') { %>
                    <a
                      href="/citizen/request/<%= req.id %>/upload"
                      class="text-green-600 hover:text-green-900"
                      >Upload</a
                    >
                    <% } %>
                  </td>
                </tr>
                <% }) %>
                <% } else { %>
                <tr>
                  <td
                    colspan="6"
                    class="px-6 py-4 text-center text-sm text-gray-500"
                  >
                    No requests found.
                    <a
                      href="/citizen/apply-service"
                      class="text-blue-600 hover:underline"
                      >Start a new one</a
                    >.
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <!-- Mobile Card List -->
          <div class="sm:hidden divide-y divide-gray-200">
            <!-- prettier-ignore -->
            <% if (requests && requests.length > 0) { %> <% requests.forEach(req => { %>
            <div class="p-4">
              <div class="flex justify-between">
                <h3 class="font-medium"><%= req.service_name %></h3>
                <span
                  class="px-2 text-xs rounded-full status-<%= req.status.toLowerCase().replace(' ', '-') %>"
                >
                  <%= req.status %>
                </span>
              </div>
              <p class="text-sm text-gray-600 mt-1">ID: <%= req.id %></p>
              <p class="text-sm text-gray-600">
                Submitted: <%= req.submitted_at %>
              </p>
              <p class="text-sm text-gray-600">ETA: <%= req.eta_days %> days</p>
              <div class="mt-3 flex justify-end space-x-2 space-x-reverse">
                <a
                  href="/citizen/request/<%= req.id %>"
                  class="text-blue-600 text-sm"
                  >View</a
                >
                <% if (req.status === 'More Info Required') { %>
                <a
                  href="/citizen/request/<%= req.id %>/upload"
                  class="text-green-600 text-sm"
                  >Upload</a
                >
                <% } %>
              </div>
            </div>
            <% }) %>
            <% } else { %>
            <div class="p-4 text-center text-sm text-gray-500">
              No requests found.
              <a
                href="/citizen/apply-service"
                class="text-blue-600 hover:underline"
                >Start a new one</a
              >.
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>
    <!-- Sidebar موبایل -->
    <%- include('../partials/sidebar-mobile.ejs') %>

    <!-- Sidebar Mobile Script -->
    <script src="/js/sidebar.js"></script>
  </body>
</html>
